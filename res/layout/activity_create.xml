<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/tvCharsRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etNewJoke"
        android:paddingLeft="0dp"
        android:paddingRight="5dp"
        android:textStyle="italic"
        android:text="N remaining" />

    <Button
        android:id="@+id/bSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spCategories"
        android:layout_centerHorizontal="true"
        android:onClick="create"
        android:text="@string/new_joke_button" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etTitle"
        android:layout_alignBottom="@+id/etTitle"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:text="@string/joke_title" />

    <TextView
        android:id="@+id/tvJokeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/joke_label"
        android:textSize="12dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNewJoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvJokeLabel"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textSize="10dp"
        android:minLines="8"
        android:hint="@string/new_joke_hint"
        android:maxLength="500" >

    </EditText>

    <TextView
        android:id="@+id/tvCategoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvCharsRemaining"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:text="@string/category_label" />

    <Spinner
        android:id="@+id/spCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvCategoryLabel"
        android:layout_toLeftOf="@+id/tvCharsRemaining"
        android:layout_toRightOf="@+id/tvCategoryLabel" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvCharsRemaining"
        android:layout_toRightOf="@+id/tvTitle"
        android:maxLines="1"
        android:ems="10"
        android:textSize="12dp" >

                <requestFocus />
        </EditText>

</RelativeLayout>
